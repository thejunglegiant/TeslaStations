<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TeslaStations" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/thunderbird</item>
        <item name="colorPrimaryVariant">@color/maroon</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/thunderbird</item>
        <item name="colorSecondaryVariant">@color/maroon</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="IconOnlyButtonStyle">
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:scaleType">centerInside</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
        <item name="rippleColor">@color/rippleColor</item>
        <item name="android:radius">@dimen/default_card_corner_radius</item>
    </style>

    <style name="AppIconButton">
        <item name="android:layout_width">@dimen/widget_height_48</item>
        <item name="android:layout_height">@dimen/widget_height_48</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="Widget.MaterialComponents.Button.Primary" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="strokeColor">@color/thunderbird</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text.size.medium</item>
        <item name="backgroundTint">@color/thunderbird</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:background">@drawable/shape_primary_button_state</item>
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:includeFontPadding">false</item>
    </style>
</resources>