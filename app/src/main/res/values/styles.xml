<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomBottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
    </style>

    <style name="CustomBottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearanceBottomSheetDialog</item>
    </style>

    <style name="CustomShapeAppearanceBottomSheetDialog" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="IconOnlyButtonStyle">
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:scaleType">centerInside</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
        <item name="rippleColor">@color/rippleColor</item>
        <item name="android:radius">@dimen/default_card_corner_radius</item>
    </style>

    <style name="AppIconButton">
        <item name="android:layout_width">@dimen/widget_height_48</item>
        <item name="android:layout_height">@dimen/widget_height_48</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="AppMiniFab">
        <item name="fabSize">mini</item>
        <item name="rippleColor">@color/transparent</item>
        <item name="borderWidth">0dp</item>
        <item name="maxImageSize">22dp</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:foreground">?android:attr/actionBarItemBackground</item>
    </style>

    <style name="Widget.MaterialComponents.Button.Primary" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="strokeColor">@color/thunderbird</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text.size.medium</item>
        <item name="backgroundTint">@color/thunderbird</item>
        <item name="android:letterSpacing">0.01</item>
        <item name="android:background">@drawable/shape_primary_button_state</item>
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:includeFontPadding">false</item>
    </style>
</resources>